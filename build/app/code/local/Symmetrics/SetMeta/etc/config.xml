<config>
    <modules>
        <Symmetrics_SetMeta>
            <version>0.2.0</version>
        </Symmetrics_SetMeta>
    </modules>    
    <global>
        <models>
            <setmeta>
                <class>Symmetrics_SetMeta_Model</class>
            </setmeta>
        </models>
        <events>
            <catalog_product_save_after>
                <observers>
                    <symmetrics_setmeta_model_observer>
                        <type>singleton</type>
                        <class>Symmetrics_SetMeta_Model_Observer</class>
                        <method>edit</method>
                    </symmetrics_setmeta_model_observer>
                </observers>
            </catalog_product_save_after>
            <controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>
                <observers>
                    <symmetrics_setmeta_model_observer>
                        <type>singleton</type>
                        <class>Symmetrics_SetMeta_Model_Observer</class>
                        <method>massEdit</method>
                    </symmetrics_setmeta_model_observer>
                </observers>
            </controller_action_postdispatch_adminhtml_catalog_product_action_attribute_save>
        </events>
        <resources>
            <setmeta_setup>
                <setup>
                    <module>Symmetrics_SetMeta</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </setmeta_setup>
        </resources>
    </global>
</config>